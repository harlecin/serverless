{
    "properties":{
        "status":"Enabled",
        "platform":{
            "os":"Linux",
            "architecture":"amd64"
        },
        "agentConfiguration":{
            "cpu":2
        },
        "step":{
            "type":"Docker",
            "imageNames":[
                "{{image_name}}:{{image_tag}}"
                ],
            "dockerFilePath":"DOCKERFILE",
            "contextPath":"{{git_url}}",
            "isPushEnabled":true,
            "noCache":false
        },
        "trigger":{
            "timerTriggers":[
                {
                    "name":"myTimerTrigger",
                    "schedule":"32 * * * *"
                }
            ],
            "sourceTriggers":[
                {
                    "name":"mySourceTrigger",
                    "sourceRepository":{
                        "sourceControlType":"Github",
                        "repositoryUrl":"{{git_url}}",
                        "branch":"master",
                        "sourceControlAuthProperties":{
                            "tokenType":"PAT",
                            "token":"{{git_pat}}"
                        }
                    },
                    "sourceTriggerEvents":[
                        "commit"
                    ]
                }
            ]
        }
    },
    "location":"{{location}}",
    "identity":{
        "type":"SystemAssigned"
    }
}
